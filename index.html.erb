<div class="container mt-5">
  <h1 class="mb-4">Categories</h1>
  <%= link_to 'New Category', new_admin_category_path, class: 'btn btn-success mb-4' %>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>
            <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-secondary btn-sm mr-1' %>
            <%= button_to 'Delete', admin_category_path(category),
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: 'btn btn-danger btn-sm', form: { class: 'd-inline' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
